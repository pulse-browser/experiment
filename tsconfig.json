{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "allowArbitraryExtensions": true,
    "paths": {
      "@shared/*": ["./src/content/shared/*"],
      "@browser/*": ["./src/content/browser/*"]
    }
  },
  "include": ["src/content/**/*"],
  "exclude": ["node_modules/*", "public/*"]
}
