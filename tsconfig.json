{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "allowArbitraryExtensions": true,
    "paths": {
      "@shared/*": [
        "./src/content/shared/*"
      ],
      "@browser/*": [
        "./src/content/browser/*"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "src/content/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "public/*"
  ]
}