{
  "name": "Google",
  "description": "Search with Google",
  "manifest_version": 2,
  "version": "1.4",
  "browser_specific_settings": {
    "gecko": {
      "id": "google@search.fushra.com"
    }
  },
  "hidden": true,
  "icons": {
    "16": "favicon.ico"
  },
  "web_accessible_resources": ["favicon.ico"],
  "chrome_settings_overrides": {
    "search_provider": {
      "keyword": "@google",
      "name": "Google",
      "search_url": "https://www.google.com/search",
      "search_form": "https://www.google.com/search",
      "suggest_url": "https://www.google.com/complete/search?client=firefox&q={searchTerms}",
      "search_url_get_params": "client=fushra&q={searchTerms}"
    }
  }
}
